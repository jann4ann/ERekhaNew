<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterPoliceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_layout"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/splash"
                    android:layout_gravity="center">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Name"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/txtPoliceName"
                    android:padding="5dp"
                    android:gravity="left"
                    android:background="@drawable/rounded_button_white"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorDarkAsh"
                    android:textColorHint="@color/colorGrey">

                </EditText>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Pen No"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/txtPolicePenNo"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/rounded_button_white"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorDarkAsh"
                    android:textColorHint="@color/colorGrey">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Mobile"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/txtPolicePhone"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/rounded_button_white"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/colorDarkAsh"
                    android:textColorHint="@color/colorDarkAsh">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Address"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/txtPoliceAddress"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="left"
                    android:background="@drawable/rounded_button_white"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:inputType="textMultiLine"
                    android:maxLines="8"
                    android:textColor="@color/colorDarkAsh"
                    android:textColorHint="@color/colorGrey">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Email"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/txtPoliceEmail"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/rounded_button_white"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorDarkAsh"
                    android:textColorHint="@color/colorGrey">

                </EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Police Station"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

               <!-- <AutoCompleteTextView
                    android:id="@+id/atvPoliceStation"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/rounded_button_white"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorDarkAsh"
                    android:textColorHint="@color/colorDarkAsh">

                </AutoCompleteTextView>-->
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp">

                    <com.rktechapps.erekhanew.commonutils.DelayAutoCompleteTextView
                        android:id="@+id/atvPoliceStation"
                        android:background="@drawable/rounded_button_white"
                        android:textSize="18dp"
                        android:maxLines="1"
                        android:textColor="@color/colorDarkAsh"
                        android:inputType="textCapSentences"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:imeOptions="flagNoExtractUi|actionSearch"/>
                    <ProgressBar
                        android:id="@+id/pb_loading_indicator"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Username (Mobile Number)"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtPoliceUserName"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/rounded_button_white"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorDarkAsh"
                    android:textColorHint="@color/colorGrey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Password"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />
                <EditText
                    android:id="@+id/txtPolicePassword"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:background="@drawable/rounded_button_white"
                    android:textSize="18dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="10dp"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:textColor="@color/colorDarkAsh"
                    android:textColorHint="@color/colorGrey">

                </EditText>

                <CheckBox
                    android:id="@+id/chkDeclare"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I declare that the data submitted is true">
                </CheckBox>

                <Button
                    android:id="@+id/btnRegisterPolice"
                    android:layout_width="150dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Continue"
                    android:textColor="@color/colorDarkAsh"
                    android:background="@drawable/roundedborderl"
                    tools:ignore="OnClick"
                    android:enabled="false"
                    android:layout_marginBottom="30dp">
                </Button>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>